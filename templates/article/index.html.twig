{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles par catégorie</h1>

    <a href="{{ path('article_new') }}" class="btn btn-primary mb-3">
        Créer un article
    </a>

    {% if groupedArticles is empty %}
        <p>Aucun article trouvé.</p>
    {% else %}
        {% for category, articles in groupedArticles %}
            <h2 class="mt-4">{{ category }}</h2>
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            {% if article.image %}
                                <a href="{{ path('article_show', { id: article.id }) }}">
                                    <img src="{{ asset('uploads/images/' ~ article.image) }}" class="card-img-top" alt="Image de l'article">
                                </a>
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('article_show', { id: article.id }) }}">
                                        {{ article.titre }}
                                    </a>
                                </h5>
                                <p class="card-text">{{ article.text1|slice(0, 100) ~ '...' }}</p>

                                {# Affichage des catégories associées à l’article #}
                                <div class="mt-2">
                                    <strong>Catégories :</strong>
                                    {% for category in article.categories %}
                                        <span class="badge bg-secondary">{{ category.name }}</span>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}
