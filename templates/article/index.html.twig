{% extends 'base.html.twig' %}

{% block title %}Articles par catégorie{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Articles par catégorie</h1>
        <a href="{{ path('article_new') }}" class="btn btn-success">
            Ajouter un article
        </a>
    </div>

    {% if groupedArticles is empty %}
        <div class="alert alert-warning">Aucun article trouvé.</div>
    {% else %}
        {% for category, articles in groupedArticles %}
            {% set carouselId = 'carousel-' ~ loop.index %}
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">{{ category }}</h2>
                    <a href="{{ path('articles_by_category', { name: category }) }}" class="btn btn-outline-primary btn-sm">
                        Voir tous les articles
                    </a>
                </div>

                <!-- Carousel -->
                <div id="{{ carouselId }}" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">

                        {# on découpe les articles par groupes de 3 #}
                        {% for articleChunk in articles|batch(3, null) %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <div class="row justify-content-center">
                                    {% for article in articleChunk %}
                                        {% if article is not null %}
                                            <div class="col-md-4">
                                                <div class="card h-100 shadow-sm">
                                                    {% if article.image %}
                                                        <a href="{{ path('article_show', { id: article.id }) }}">
                                                            <img src="{{ asset('uploads/images/' ~ article.image) }}" class="card-img-top" alt="Image de l'article">
                                                        </a>
                                                    {% endif %}
                                                    <div class="card-body">
                                                        <h5 class="card-title">
                                                            <a href="{{ path('article_show', { id: article.id }) }}" class="text-decoration-none">
                                                                {{ article.titre }}
                                                            </a>
                                                        </h5>
                                                        <p class="card-text text-muted small">
                                                            {{ article.text1|slice(0, 100) ~ '...' }}
                                                        </p>
                                                        <div class="mt-2">
                                                            <strong>Catégories :</strong>
                                                            {% for categoryItem in article.categories %}
                                                                <span class="badge bg-secondary">{{ categoryItem.name }}</span>
                                                            {% endfor %}
                                                            {% if article.createdAt is defined and article.createdAt %}
                                                                <span class="text-muted ms-2">| {{ article.createdAt|date('d/m/Y') }}</span>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}

                    </div>

                    <!-- Flèches en dessous -->
                    <div class="d-flex justify-content-center mt-3">
                        <button class="btn btn-outline-primary me-2" type="button" data-bs-target="#{{ carouselId }}" data-bs-slide="prev">
                            &#8592; Précédent
                        </button>
                        <button class="btn btn-outline-primary" type="button" data-bs-target="#{{ carouselId }}" data-bs-slide="next">
                            Suivant &#8594;
                        </button>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
